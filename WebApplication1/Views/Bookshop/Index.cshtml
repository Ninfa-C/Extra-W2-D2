@using WebApplication1.Models.ViewModels
@model BookListModel

@{
	ViewData["Title"] = "Epibook - Bookshop";
}
<div>
	<h1>Benvenuto su Epibook - La tua libreria personalizzata! </h1>
</div>
<div class=" container-fluid">
	<div class="row row-cols-md-4 row-cols-lg-5 mx-5">
		@if (Model.Books != null)
		{
			foreach (var item in Model.Books)
			{
				<div class="col">
					<div class="card mb-3" style="height: 33rem;">
						<img class="card-img-top" src="@item.Img" alt="@item.Title" style="height: 18rem;">
						<div class="card-body d-flex flex-column">
							<div >
								<h5 class="card-title">@item.Title</h5>
								<h6 class="card-subtitle mb-2 text-body-secondary">@item.Author</h6>
								<span class="badge bg-dark">@item.Genre</span>
								<p class="card-text mt-3">€ @item.Price</p>
								</div>
							<div class="d-flex justify-content-center gap-2 mt-auto">
								<button class="btn btn-danger btn-sm"><i class="bi bi-bag-plus" id="add">Aggiungi</i></button>
								<button class="btn btn-outline-secondary btn-sm">Scarta</button>
							</div>
						</div>
					</div>
				</div>
			}
		}
	</div>
</div>



